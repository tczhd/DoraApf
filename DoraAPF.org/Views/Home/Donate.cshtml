@model DoraAPF.org.ViewModels.Payment.PaymentViewModel
@{
    ViewData["Title"] = "Donate";
}

<h2>Dora animal fundation protection Donation.</h2>
<hr />
<div class="donation-section animated fadeIn">
    <form asp-controller="Home" method="post" class="form-horizontal" id="myForm" asp-action="ProcessPayment">
        <div class="row">
            <div class=" col-sm-12">
                <h3>1. Choose donation amount</h3>
            </div>
        </div>
        <div class="amount-row row">
            <div class="amount-col col-sm-12">
                <label class="radio-inline"><input asp-for="PaymentAmount" value="10" type="radio" checked="checked" />$10.00</label>
                <label class="radio-inline"><input asp-for="PaymentAmount" value="20" type="radio" />$20.00</label>
                <label class="radio-inline"><input asp-for="PaymentAmount" value="50" type="radio" />$50.00</label>
                <label class="radio-inline"><input asp-for="PaymentAmount" value="100" type="radio" />$100.00</label>
                <label class="radio-inline"><input asp-for="PaymentAmount" value="200" type="radio" />$200.00</label>
            </div>

        </div>
        <div class="row">
            <div class="billing-info col-sm-6">
                <div class="row">
                    <div class=" col-sm-12">
                        <h3>2.  Select your billing info</h3>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-12">
                        <label asp-for="Title"></label><br />
                        <select asp-for="Title" id="selectPatient" name="selectPatient"
                                class="form-control"
                                asp-items="@(new SelectList(Enum.GetValues(typeof(Title))))"></select>
                    </div>

                </div>
                <div class="row">
                    <div class=" col-sm-6">
                        <label asp-for="FirstName"></label><br />
                        <input type="text" asp-for="FirstName" placeholder="First Name"  />
                        </div>
                    <div class=" col-sm-6">
                        <label asp-for="LastName"></label><br />
                        <input type="text" asp-for="LastName" placeholder="Last Name" />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-12">
                        <label asp-for="Address1"></label><br />
                        <input type="text" asp-for="Address1" placeholder="Address1" />
                    </div>
 
                </div>
                <div class="row">
                    <div class=" col-sm-12">
                        <label asp-for="Address2"></label><br />
                        <input type="text" asp-for="Address2" placeholder="Address2" />
                    </div>

                </div>
                <div class="row">
                    <div class=" col-sm-4">
                        <label asp-for="City"></label><br />
                        <input type="text" asp-for="City" placeholder="City" />
                    </div>
                    <div class=" col-sm-4">
                        <label asp-for="State"></label><br />
                        <input type="text" asp-for="State" placeholder="State" />
                    </div>
                    <div class=" col-sm-4">
                        <label asp-for="County"></label><br />
                        <input type="text" asp-for="County" placeholder="County" />
                    </div>
                </div>

                <div class="row">
                    <div class=" col-sm-6">
                        <label asp-for="PostalCode"></label><br />
                        <input type="text" asp-for="PostalCode" placeholder="Postal Code" />
                    </div>
                    <div class=" col-sm-6">
                        <label asp-for="Phone"></label><br />
                        <input type="text" asp-for="Phone" placeholder="Phone Number" />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-12">
                        <label asp-for="Email"></label><br />
                        <input type="text" asp-for="Email" placeholder="Email" />
                    </div>
                </div>
            </div>
            <div class="credit-card-info col-sm-6">
                <div class="row">
                    <div class=" col-sm-12">
                        <h3>3.  Select your payment method</h3>
                        <div>
                            <img src="~/images/creditCard/visa_small.gif" />
                            <img src="~/images/creditCard/mastercd_small.gif" />
                            <img src="~/images/creditCard/amex_small.gif" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-12">
                        <label asp-for="CardHolderName"></label><br />
                        <input type="text" asp-for="CardHolderName" placeholder="Card Holder Name" />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-12">
                        <label asp-for="CardNumber"></label><br />
                        <input type="text" asp-for="CardNumber" placeholder="Card Number" />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-6">
                        <label asp-for="CardExpiry"></label><br />
                        <input type="text" asp-for="CardExpiry" placeholder="Expiration Date" />
                    </div>
                    <div class=" col-sm-6">
                        <label asp-for="CardCVV"></label><br />
                        <input type="text" asp-for="CardCVV" placeholder="MMYY" />
                    </div>
                </div>
                <div class=" row">
                    <div class="button-section col-sm-6">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>

                        <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i>Reset</button>
                    </div>
                </div>
            </div>
        </div>
        
    </form>
</div>

@section Styles {
    <link href="~/css/Donation.css" rel="stylesheet">
}